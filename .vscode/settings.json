{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "C_Cpp.errorSquiggles": "disabled",
    "files.associations": {
        "istream": "cpp",
        "__locale": "cpp",
        "locale": "cpp",
        "cstddef": "cpp",
        "ostream": "cpp",
        "complex": "cpp",
        "chrono": "cpp"
    }
}